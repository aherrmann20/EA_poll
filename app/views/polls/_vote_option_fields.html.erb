<!-- Creates "block" to create a vote_option as a partial that can be called as many times as needed to create as many options as needed. -->
<div class="nested-fields">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <%= f.label "Correct?" %> <br />
  <%= f.check_box :correct %> <br />
  <%= link_to_remove_association "remove option", f %>
  
</div>
