<!-- Uses ruby formbuilder to create form for profile. One user has one profile so as to not mess with devise's user set-up. This first block uses the pluralize method to display any errors encountered while creating profiles. -->
<%= form_for @profile do |f| %>
	<% if @profile.errors.any? %>
		<div id="error_explanation">	
			<h2>
				<%= pluralize(@profile.errors.count, "error") %> prohibited your profile from being saved:
			</h2>
			<ul>
				<% @profile.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>li>
				<% end %>
			</ul>
		</div>
	<% end %>

<!-- Other labels and fields for attributes of profiles -->
  <p>
    <%= f.label 'Link to your profile picture' %><br>
    <%= f.text_field  :photo %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :surname %><br>
    <%= f.text_field :surname %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
 <!-- Submit button for form -->
  <p>
    <%= f.submit %>
  </p>
<% end %>

